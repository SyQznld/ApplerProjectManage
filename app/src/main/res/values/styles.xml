<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/ClubToolbar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProjectDetailTheme" parent="AppTheme"></style>

    <style name="My_CheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <!-- 对话框 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/android:transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="PopWindowAnimStyle">
        <item name="android:windowShowAnimation">@anim/dialog_enter</item>
        <!-- 指定显示的动画xml  -->
        <item name="android:windowHideAnimation">@anim/dialog_exit</item>
        <!-- 指定消失的动画xml  -->
    </style>

    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
    </style>

    <style name="AppTheme.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="AppTheme.Label.Search">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#9d9d9f</item>
    </style>

    <style name="AppTheme.Label.Title">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Label.Discription">
        <item name="android:gravity">top</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/textsize_content</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="AppTheme.Label.Layout">
        <item name="android:paddingTop">@dimen/padding_common_v</item>
        <item name="android:paddingBottom">@dimen/padding_common_v</item>
        <item name="android:paddingLeft">@dimen/padding_common_h</item>
        <item name="android:paddingRight">@dimen/padding_common_h</item>
    </style>

    <style name="AppTheme.Division">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/division_line</item>
        <item name="android:dividerHeight">@dimen/division_line</item>
        <item name="android:divider">@color/colorDivision</item>
        <item name="android:background">@color/colorDivision</item>
    </style>

    <style name="AppTheme.CommonBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.CommonBar.Panel">
        <!--<item name="android:paddingTop">@dimen/division_line</item>-->
        <!--<item name="android:paddingBottom">@dimen/division_line</item>-->
        <item name="android:paddingTop">@dimen/padding_common</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bc_background_panel</item>
    </style>

    <style name="AppTheme.CommonBar.Bar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">@dimen/padding_common</item>
        <item name="android:paddingRight">@dimen/padding_common</item>
        <!--<item name="android:paddingTop">@dimen/padding_common_d</item>-->
        <!--<item name="android:paddingBottom">@dimen/padding_common_d</item>-->

        <item name="android:background">?android:attr/selectableItemBackground</item>
        <!--<item name="android:background">@drawable/af_selector_background_white</item>-->
    </style>

    <style name="AppTheme.CommonBar.Content" parent="AppTheme.Label">
        <item name="android:singleLine">false</item>
        <!--<item name="android:layout_margin">@dimen/padding_common_d</item>-->
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:paddingTop">2dp</item>-->
        <!--<item name="android:paddingBottom">2dp</item>-->
        <!--<item name="android:paddingLeft">@dimen/padding_common_d</item>-->
        <!--<item name="android:paddingRight">@dimen/padding_common</item>-->
        <item name="android:paddingTop">@dimen/padding_common</item>
        <item name="android:paddingBottom">@dimen/padding_common</item>
        <item name="android:paddingLeft">@dimen/padding_common_d</item>
        <item name="android:paddingRight">@dimen/padding_common_d</item>
        <item name="android:drawablePadding">@dimen/padding_common</item>
    </style>

    <style name="AppTheme.CommonBar.Content.Value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>


    <style name="MenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">#3F51B5</item>
        <item name="fab_colorPressed">#3F51B5</item>
        <item name="fab_colorRipple">#3F51B5</item>
    </style>

    <style name="DetailMenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">#fa6062</item>
        <item name="fab_colorPressed">#ff8585</item>
        <item name="fab_colorRipple">#ec3636</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>

    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>

    <!-- 自定义样式的name属性用于引用，父亲是默认的style -->
    <style name="InitProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <!-- 最大高度50dp，最小高度10dp，进度值确定，Drawable样式文件引用 -->
        <item name="android:maxHeight">20dp</item>
        <item name="android:minHeight">13dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/progress_project</item>
    </style>


    <style name="project_fab">
        <item name="fab_size">normal</item>
        <item name="fab_shadowColor">#fff</item>
        <item name="fab_colorNormal">#fa6062</item>
        <item name="fab_colorPressed">#ff8585</item>
        <item name="fab_colorRipple">#ec3636</item>
        <item name="fab_elevationCompat">4dp</item>
    </style>

    <!-- 设置弹出窗口的属性，frame叠加，isfloat是否浮动，tarnslucent是否半透明，dim是背景是否变暗 -->
    <style name="Theme_audioDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="Title">
        <item name="android:textSize" tools:ignore="PrivateResource">20sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="ExpandedTitle">
        <item name="android:textSize" tools:ignore="PrivateResource">30sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff7f7f7f</item>
    </style>

    <style name="Bubble.TextAppearance.Light" parent="Bubble.TextAppearance.Dark">
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <style name="ClusterIcon.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">#ffeeeeee</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AnimationBottomFade">
        <item name="android:windowEnterAnimation">@anim/jump_from_down</item>
        <item name="android:windowExitAnimation">@anim/jump_to_down</item>
    </style>

</resources>
