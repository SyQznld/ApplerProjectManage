<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:descendantFocusability="afterDescendants">

    <RelativeLayout
        android:id="@+id/relat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:visibility="visible">

        <com.example.q_kang.pmsystem.view.recordBean.CommonSoundItemView
            android:id="@+id/pp_sound_item_view"
            android:layout_width="120dp"
            android:layout_height="35dp" />

        <ImageView
            android:id="@+id/pp_iv_abandon_sound"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignRight="@id/pp_sound_item_view"
            android:layout_alignTop="@id/pp_sound_item_view"
            android:src="@mipmap/ar_delete_audio" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="7dp"
            android:src="@mipmap/file_image" />

        <TextView
            android:id="@+id/tv_fileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Google.apk"
            android:textColor="@color/back"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee" />


</RelativeLayout>