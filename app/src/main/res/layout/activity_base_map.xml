<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.q_kang.pmsystem.ui.activity.map.BaseMapActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue">

        <ImageButton
            android:id="@+id/ib_basemap_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="12dp"
            android:src="@mipmap/image_b" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="地图管理"
            android:textColor="@android:color/white"
            android:textSize="18sp" />


        <ImageView
            android:id="@+id/iv_map_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:padding="@dimen/dp_12"
            android:src="@drawable/ic_search_white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_map_layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:padding="@dimen/dp_12"
            android:src="@drawable/ic_map_layer" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/mv_base_mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_projectlocation"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/shape_login_bg"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/iv_projectlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/image_location"
            android:visibility="gone" />


        <TextView
            android:id="@+id/ib_basemap_yingxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="110dp"
            android:layout_marginLeft="15dp"
            android:background="@android:color/white"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_map_yingxiang"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="影像" />

        <TextView
            android:id="@+id/ib_basemap_shiliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="110dp"
            android:layout_marginLeft="15dp"
            android:background="@android:color/white"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_map_shiliang"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="矢量"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/ib_basemap_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="15dp"
            android:background="@android:color/white"
            android:padding="8dp"
            android:src="@drawable/ic_iv_location" />

        <ImageButton
            android:id="@+id/ib_basemap_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="15dp"
            android:background="@android:color/white"
            android:padding="8dp"
            android:src="@drawable/ic_location_sure"
            android:visibility="gone" />


    </RelativeLayout>

</LinearLayout>
